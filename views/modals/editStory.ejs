<!-- Edit Story Modal -->
<div id="editStoryModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit Story</h3>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <div class="modal-body">
                <form class="form" role="form" autocomplete="off" id="eventAdd" novalidate="" method="POST">

                    <div class="form-group">
                        <label for="eventName">Story name</label>
                        <input type="text" class="form-control form-control-md" name="eventName" id="editStoryName"
                               required="">
                    </div>


                    <div class="form-group">
                        <label for="uname1">Picture</label>
                        <input type="text" class="form-control form-control-md" name="event_picture"
                               id="editStoryPicture" required="">
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea">Story Description</label>
                        <textarea class="form-control" id="editStoryDescription" rows="3"></textarea>
                    </div>

                    <div class="form-group py-4">
                        <button class="btn btn-danger btn-lg" data-dismiss="modal" aria-hidden="true">Cancel</button>
                        <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>