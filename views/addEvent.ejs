<body>

<div class="container">

    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">
                    <i class="fas fa-plus"></i> Create Event
                </h1>
                <% include ./partials/messages %>
                <form action="/index/createEvent" enctype="multipart/form-data" method="POST">

                    <div class="form-group">
                        <label for="eventname">Event name</label>
                        <input type="text" class="form-control form-control-md" name="eventName" id="eventName"
                               required="">
                    </div>

                    <div class="form-group">
                        <label>Start Date &ensp;</label>
                        <input type="datetime-local" name="eventStartDate" max="3000-12-31"
                               min="1000-01-01" class="form" id="eventStartDate" required="">
                    </div>

                    <div class="form-group">
                        <label>End Date &emsp;</label>
                        <input type="datetime-local" name="eventEndDate" max="3000-12-31"
                               min="1000-01-01" class="form" id="eventEndDate" required="">
                    </div>

                    <div class="form-group">

                        <label for="uname1">Picture</label>
                        <div class="input-group" id="pictureInput">
                            <span class="input-group-btn">
                                <span class="btn btn-default btn-file">
                                    Browse photo(s) <input type="file" name="myFiles" multiple>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea">Event Description</label>
                        <textarea class="form-control" name="eventDescription" id="eventDescription" rows="3"
                                  required=""></textarea>
                    </div>

                    <div class="form-group">
                        <label for="uname1">Location</label>
                        <input type="text" class="form-control form-control-md col-11" name="eventLocation"
                               id="eventLocation" required="">
                    </div>

                    <div class="form-row">

                        <div class="form-group col-md-8">
                            <label for="inputCity">City</label>
                            <input type="text" class="form-control" name="eventCity" id="eventCity" required="">
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputZip">Postcode</label>
                            <input type="text" class="form-control" name="eventPostcode" id="eventPostcode" required="" pattern="([Gg][Ii][Rr] 0[Aa]{2})|((([A-Za-z][0-9]{1,2})|(([A-Za-z][A-Ha-hJ-Yj-y][0-9]{1,2})|(([A-Za-z][0-9][A-Za-z])|([A-Za-z][A-Ha-hJ-Yj-y][0-9][A-Za-z]?))))\s?[0-9][A-Za-z]{2})">
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <input type="hidden" class="form-control" name="eventUsername" id="eventUsername"
                                   value="<%= username %>">
                        </div>
                        <div class="form-group col-md-3">
                            <input type="hidden" class="form-control" name="eventFirstname" id="eventFirstname"
                                   value="<%= firstname %>">
                        </div>
                        <div class="form-group col-md-3">
                            <input type="hidden" class="form-control" name="eventSurname" id="eventSurname"
                                   value="<%= surname %>">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">
                        Create Event
                    </button>
                </form>
            </div>
        </div>
    </div>

</div>

